apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ tailscale_repoURL }}
    targetRevision: {{ tailscale_chart_version }}
    helm:
      values: |-
        {{ tailscale_values | to_nice_yaml | indent(8)}}
    chart: tailscale-operator
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: tailscale
  syncPolicy:
    syncOptions:
      - CreateNamespace=true