apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ chart_name }}
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ repoURL }}
    targetRevision: {{ chart_version }}
    helm:
      values: >-
        {{ chart_values | to_nice_yaml | indent(8   ) }}
    chart: {{ chart_name }}
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: {{ namespace }}
  {{ common_sync_options | to_nice_yaml | indent(1) }}
